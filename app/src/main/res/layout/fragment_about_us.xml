<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/colorBlack"
    >

    <LinearLayout
        android:id = "@+id/LayoutIcones"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id ="@+id/GetInTouch"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Get_in_touch"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorCornFlowerBlue"
            />
        <ImageView
            android:layout_marginRight="20dp"
            android:id ="@+id/IconLeft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="enterImageLink"
            />
        <ImageView
            android:layout_marginRight="20dp"
            android:id ="@+id/IconMiddle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id = "@+id/IconRight"
            android:layout_marginRight="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <ImageView
        android:id = "@+id/ImagemDesc"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="180dp"
        android:layout_below="@id/LayoutIcones"
        />
    <TextView
        android:id = "@+id/descricaoBanda"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ImagemDesc"
        android:textColor="@color/colorWhite"
        />
    <TextView
        android:id ="@+id/ContatosFinal"
        android:layout_below="@id/descricaoBanda"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorCornFlowerBlue"
        android:textIsSelectable="true"
        android:text="@string/Outros_contatos"
        />

</RelativeLayout>
</ScrollView>